offwhite = #F7F7F4
offblack = #333333

*
	margin 0
	padding 0
	list-style none
	text-decoration none
	font-family 'Roboto', sans-serif
	-webkit-box-sizing border-box
	-moz-box-sizing border-box
	box-sizing border-box
	position relative

html, body
	width 100%
	height 100%

body
	background-color offwhite
	position relative
	color offblack
	font-size 16px

a
	color inherit
	margin 0
	padding 0

.link
	text-decoration underline
.link:hover
	text-decoration none

.choicebox
	height 122px
	width 100%
	text-align center
	position absolute
	top 0px
	bottom 0px
	margin auto


.choice
	display block
	font-size 16px
	margin-top 10px


// on smartphones:
@media screen and (max-width: 768px)
	body
		font-size 12px
